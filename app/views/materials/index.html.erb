<h1>Listing materials</h1>

<table>
  <thead>
    <tr>
      <th>Recipe</th>
      <th>Name</th>
      <th>Image</th>
      <th>Volume</th>
      <th>Order</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.recipe_id %></td>
        <td><%= material.name %></td>
        <td><%= material.image %></td>
        <td><%= material.volume %></td>
        <td><%= material.order %></td>
        <td><%= link_to 'Show', material %></td>
        <td><%= link_to 'Edit', edit_material_path(material) %></td>
        <td><%= link_to 'Destroy', material, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

